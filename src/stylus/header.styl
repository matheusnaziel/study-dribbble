.main-header
	width 100%
	position fixed
	top 0
	max-width 425px

.navbar-wrapper-background
	background-color rgba(156, 39, 176, 0.5)
	background url(../images/remote.jpg)
	height 135px
	width 100%
	background-position left

.navbar-wrapper-point
	display flex
	align-items center
	height 100%
	justify-content flex-end
	color white
	
	span
		margin-right 5px

.navbar-wrapper-point-span	
	background-color #cecece
	width 5px
	height 5px
	border-radius 10px
	color white

.navbar-wrapper-rgba
	height 100%
	background rgba(156,39,176,0.5)
	
.navbar-wrapper-content
	height 50%

.navbar-wrapper-content-under
	height 50%
	display flex
	align-items flex-end

.navbar-wrapper-content-text
	height 65px
	display flex
	align-items flex-end
	
	p
		color white
		margin-bottom 8px
	
.navbar-wrapper-arrow
	font-size 30px

.navbar-wrapper-content-under-icon
	height 100%
	display flex
	align-items flex-end
	justify-content flex-end

.icon-bg
	width 40px
	height 40px
	background-color red
	border-radius 20px
	position absolute
	bottom -19px

.icon-vert
	width 4px
	height 19px
	background-color white
	position relative
	top 9px
	right 0
	

.icon-hori
	width 19px
	height 4px
	background-color white
	position relative
	right 11px
	top 2px	
		